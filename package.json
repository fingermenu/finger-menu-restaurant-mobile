    "immutable": "^4.0.0-rc.9",
    "js-joda": "^1.6.2",
    "lodash.debounce": "^4.0.8",
    "monet": "^0.8.10",
    "prop-types": "15.6.0",
    "react": "16.2.0",
    "react-i18next": "^7.3.6",
    "react-immutable-proptypes": "2.1.0",
    "react-native": "0.52.2",
    "react-native-action-button": "^2.8.4",
    "react-native-code-push": "^5.2.1",
    "react-native-config": "^0.11.5",
    "react-native-easy-grid": "0.1.17",
    "react-native-easy-toast": "^1.0.9",
    "react-native-elements": "0.19.0",
    "react-native-exception-handler": "^2.7.1",
    "react-native-fast-image": "^2.2.4",
    "react-native-fbsdk": "^0.7.0",
    "react-native-image-pan-zoom": "^2.0.16",
    "react-native-maps": "^0.20.0",
    "react-native-popup-dialog": "^0.10.46",
    "react-native-popup-menu": "^0.12.2",
    "react-native-restart": "0.0.6",
    "react-native-swiper": "^1.5.13",
    "react-native-tcp": "^3.3.0",
    "react-native-vector-icons": "4.5.0",
    "react-navigation": "1.0.0-beta.27",
    "react-redux": "5.0.6",
    "react-relay": "1.4.1",
    "redux": "3.7.2",
    "redux-form": "^7.2.3",
    "redux-saga": "0.16.0",
    "uuid": "3.2.1"
  },
  "devDependencies": {
    "adm-zip": "^0.4.7",
    "babel-eslint": "8.2.1",
    "babel-jest": "22.2.2",
    "babel-plugin-relay": "1.4.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-flow": "6.23.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-react-native": "4.0.0",
    "babel-preset-react-native-stage-0": "1.0.1",
    "babel-preset-stage-0": "^6.24.1",
    "eslint": "4.17.0",
    "eslint-plugin-flowtype": "2.43.0",
    "eslint-plugin-import": "2.8.0",
    "eslint-plugin-jest": "^21.8.0",
    "eslint-plugin-react": "7.6.1",
    "eslint-plugin-react-native": "3.2.1",
    "flow-bin": "0.65.0",
    "husky": "^0.14.3",
    "jest": "22.2.2",
    "lint-staged": "^6.1.0",
    "plist": "^2.1.0",
    "prettier": "1.10.2",
    "react-devtools": "3.1.0",
    "react-test-renderer": "16.2.0",
    "redux-devtools": "3.4.1",
    "relay-compiler": "1.4.1",
    "xcode": "^1.0.0"
  },
  "jest": {
    "preset": "react-native"
  },
  "pre-commit": "lint:staged",
  "repository": {
    "url": "git@bitbucket.org:fingermenu/finger-menu-restaurant-mobile.git",
    "type": "git"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json,css}": [
      "prettier --write --single-quote true --trailing-comma all --print-width 150",
      "npm run fixlint",
      "git add"
    ]
  }
