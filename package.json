{
  "name": "FingerMenuRestaurant",
  "description": "Finger Menu Restaurant",
  "version": "0.0.5",
  "author": {
    "name": "FingerMenu Ltd",
    "email": "fingermenu.ltd@gmail.com",
    "url": "http://www.fingermenu.co.nz"
  },
  "private": true,
  "scripts": {
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "lint": "eslint src",
    "fixlint": "eslint --fix --ext .jsx --ext .js src",
    "test": "jest",
    "test:watch": "jest --watch",
    "flow": "flow",
    "relay": "relay-compiler --src ./src --schema data/schema.graphql",
    "relay:watch": "yarn relay -- --watch",
    "android:apk": "cd android && ./gradlew assembleRelease",
    "android:install": "adb install android/app/build/outputs/apk/app-release.apk",
    "clear": "node node_modules/react-native/local-cli/cli.js start --reset-cache",
    "devtools": "react-devtools",
    "precommit": "lint-staged",
    "codepush:ios": "code-push release-react fingermenu-restaurant-ios ios && code-push promote fingermenu-restaurant-ios Staging Production",
    "codepush:android": "code-push release-react fingermenu-restaurant-android android && code-push promote fingermenu-restaurant-android Staging Production"
  },
  "dependencies": {
    "@microbusiness/common-react": "^1.1.11",
    "@microbusiness/common-react-native": "^1.1.37",
